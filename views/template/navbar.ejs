<script>
    var main_route = document.getElementById('main_route').value ;
    console.log(main_route);
    if( main_route == 'index' || main_route == '/' ){
        $("#index").addClass("colorlib-active");
    }else if( main_route == 'about'){
        $("#about").addClass("colorlib-active");
    }else if( main_route == 'work'){
        $("#work").addClass("colorlib-active");
    }else if( main_route == 'services'){
        $("#services").addClass("colorlib-active");
    }else if( main_route == 'blog'){
        $("#blog").addClass("colorlib-active");
    }else if( main_route == 'contact'){
        $("#contact").addClass("colorlib-active");
    }
</script>